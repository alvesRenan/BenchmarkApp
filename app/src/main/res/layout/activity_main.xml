<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnMatrix"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginTop="158dp"
        android:layout_marginBottom="27dp"
        android:text="@string/btnMatrix"
        app:layout_constraintBottom_toTopOf="@+id/btnBenchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBenchImage"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:text="@string/btnBenchImage"
        app:layout_constraintBottom_toTopOf="@+id/btnFibonacci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMatrix" />

    <Button
        android:id="@+id/btnFibonacci"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="139dp"
        android:text="@string/btnFibonacci"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBenchImage" />

</androidx.constraintlayout.widget.ConstraintLayout>